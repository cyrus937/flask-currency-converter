# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
# DATABASE_URL=postgresql://username:password@localhost:5432/flask_auth_currency
# ou pour SQLite en développement:
DATABASE_URL=sqlite:///app.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Currency API Keys (optionnel)
FIXER_API_KEY=your-fixer-api-key
EXCHANGERATE_API_KEY=your-exchangerate-api-key

# Celery (pour les tâches de fond)
CELERY_BROKER_URL=redis://localhost:6379/3
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Security (production uniquement)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=DEBUG